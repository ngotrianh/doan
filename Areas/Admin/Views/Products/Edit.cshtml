@model nhom17.Models.TbProduct

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>sửa menu</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">sửa product</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form asp-action=" Edit">
                            <div class="card-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Title" class="control-lable col-12 "> tiêu đề </label>
                                    <input asp-for="Title" class="from-control col-12" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Alias" class="control-lable col-12 "></label>
                                    <input asp-for="Alias" class="from-control col-12" />
                                    <span asp-validation-for="Alias" class="text-danger"></span>
                                </div>



                                <div class="form-group">
                                    <label asp-for="CategoryProductId" class="control-lable col-12"> Danh muc </label>
                                    <select asp-for="CategoryProductId" class="form-control" asp-items="ViewBag.CategoryProductId">
                                        <option value="0" selected>--[chon danh muc]--</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Image" class="control-label"> ảnh </label>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <button type="button" class="btn btn-success" onclick="openDialog()"> chọn một ảnh </button>
                                        </div>
                                        <input type="text" class="form-control" id="file_input" asp-for="Image" aria-describedby="button" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description" class="control-lable col-12 "> mô tả </label>
                                    <input asp-for="Description" class="from-control col-12" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Detail" class="control-lable col-12 "> chi tiết </label>
                                    <input asp-for="Detail" class="from-control col-12" />
                                    <span asp-validation-for="Detail" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Price" class="control-lable col-12 "> giá </label>
                                    <input asp-for="Price" class="from-control col-12" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PriceSale" class="control-lable col-12 "> giảm giá </label>
                                    <input asp-for="PriceSale" class="from-control col-12" />
                                    <span asp-validation-for="PriceSale" class="text-danger"></span>
                                </div>






                            </div>
                            <!-- /.card-body -->

                            <div class="from-group">
                                <input type="submit" value="sửa" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->

                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>